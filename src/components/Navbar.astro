---
import { LanguageSelector } from "astro-i18next/components";
---

<nav
	aria-label="Navigation Bar"
	class="mb-4 border-b border-primary/50 bg-white/50 text-center text-primary backdrop-blur-sm"
>
	<ul class="mx-auto flex max-w-4xl flex-col items-center p-4 sm:flex-row sm:p-0">
		<li class="sm:mr-auto">
			<a href="/" class="block py-2 sm:p-3">
				<h1 class="text-2xl text-green-700">CALE 2024</h1>
			</a>
		</li>
		<li class="w-full sm:w-fit">
			<a
				href="/about"
				class="block w-full py-2 transition-colors duration-500 hover:bg-primary hover:text-white sm:p-4"
			>
				About
			</a>
		</li>
		<li class="w-full sm:w-fit">
			<a
				href="/team"
				class="block w-full py-2 transition-colors duration-500 hover:bg-primary hover:text-white sm:p-4"
			>
				Team
			</a>
		</li>
		<li class="w-full sm:w-fit">
			<a
				href="/sponsors"
				class="block w-full py-2 transition-colors duration-500 hover:bg-primary hover:text-white sm:p-4"
			>
				Sponsors
			</a>
		</li>
		<li class="flex items-center">
			<LanguageSelector
				class="mx-2 block rounded-md border border-primary/50 bg-transparent px-2 py-2 text-primary transition-colors duration-500 hover:bg-primary hover:text-white"
			/>
		</li>
	</ul>
</nav>
